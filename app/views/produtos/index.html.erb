<p id="notice"><%= notice %></p>

<h3> Produtos </h3>

<table>
  <thead>
    <tr>
      <th>Código</th>
      <th>Nome</th>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.codigo %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.modelo %></td>
        <td><%= produto.marca %></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to ' ', edit_produto_path(produto), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to ' ', produto, method: :delete, data: { confirm: 'Você tem certeza?' } , class: "glyphicon glyphicon-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %>
